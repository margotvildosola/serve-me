  "scripts": {
    "start": "webpack --config webpack.config.production.js && npm run setProd",
    "setProd": "cross-env NODE_ENV=production electron .",
    "setDev": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"babel-node server.js\" \"npm run setDev\"",
    "build": "webpack --config webpack.config.production.js && electron-packager . ElecroServer --platform=darwin --arch=all --prune --overwrite",
    "lint:js": "eslint . --cache",
    "test": "jest"
  },
