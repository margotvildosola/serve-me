    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.3",
    "react-router": "^4.0.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.3.1",
    "redux-logger": "^2.8.2",
    "redux-thunk": "^2.2.0"
  },
